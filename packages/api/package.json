{
  "name": "@b5x/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/index.js",
    "devstart": "PORT=8080 tsc-watch --noClear -p ./tsconfig.json --onSuccess 'node ./dist/index.js'",
    "test": "pnpm build; jest --coverage",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.b5x src/**/db/migrations/*.js dist/",
    "build": "pnpm clean && tsc && pnpm copy-files",
    "seed": "node ./dist/db/scripts/seedDevelopmentDb.js"
  },
  "dependencies": {
    "@b5x/conditions-manager": "workspace:*",
    "bcrypt": "^5.1.0",
    "bull": "^4.10.2",
    "connect-session-knex": "^3.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "draft-js": "^0.11.7",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "http-errors": "^2.0.0",
    "jest": "^29.3.1",
    "knex": "^2.3.0",
    "knex-stringcase": "^1.4.6",
    "lodash": "^4.17.21",
    "lorem-ipsum": "^2.0.8",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "postgres": "^3.3.2",
    "redis": "^4.5.1",
    "uuid": "^9.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "tsc-watch": "^6.0.0",
    "supertest": "^6.3.3",
    "rimraf": "^3.0.2",
    "copyfiles": "^2.4.1",
    "data-sanitizer": "^1.8.1"
  },
  "jest": {
    "globalSetup": "<rootDir>/src/tests/config/globalSetup.js",
    "globalTeardown": "<rootDir>/src/tests/config/globalTeardown.js",
    "setupFiles": [
      "<rootDir>/src/tests/config/setupBeforeEachTestFile.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "text"
    ],
    "coverageDirectory": "./../../docs/coverage/api"
  },
  "typedoc": {
    "entryPoint": "./src/typedocEntryPoint.ts"
  }
}
